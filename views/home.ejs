<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <form method="POST" action="/url">
        <label> Enter your URL: </label>
        <input type="text" placeholder="https://www.example.com" name="url">
        <!-- This name is important because it will be passed to backend -->
        <button type="submit">Generate</button>
    </form>
    <% if (locals.id) { %>
        <p>Short url generated: 
           <a>http://localhost:8001/url/<%= id %></a>
       </p>
       <% } %>
    <% if (locals.urls) { %>
        <h1>List of Urls</h1>
        <table>
            <thead>
                <th>Index</th>
                <th>Short URL</th>
                <th>Redirect URL</th>
                <th>Number of</th>
            </thead>
            <tbody>
              <% urls.forEach((url, index) => { %>
                <tr>
                    <td><%= index %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectURL %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
     
    <% } %>
    

</body>
</html>